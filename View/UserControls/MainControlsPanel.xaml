<UserControl x:Class="View.UserControls.MainControlsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:global="clr-namespace:View"
             xmlns:local="clr-namespace:View.UserControls"
             xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             mc:Ignorable="d" 
             d:DesignHeight="820" d:DesignWidth="1240">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="columnDefinitionSettingsColumn" Width="310"/>
            <ColumnDefinition x:Name="columnDefinitionMainControlsColumn" Width="*"/>
            <ColumnDefinition x:Name="columnDefinitionStatusColumn" Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="310"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="170"/>
            </Grid.RowDefinitions>

            <Grid x:Name="gridSettingsRow" Grid.Row="0" HorizontalAlignment="Stretch" Margin="5,0,0,0" Background="#4C000000" >

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="rowDefinitionActuatorSettingsTitle" Height="40"/>
                        <RowDefinition x:Name="rowDefinitionActuatorSettingsCheckBox" Height="35"/>
                        <RowDefinition x:Name="rowDefinitionActuatorSettingsBody" Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <local:ControlTitleBar TextBlockTitleBar="Actuator Settings" HorizontalAlignment="Stretch" Height="40" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <CheckBox x:Name="checkBoxActuatorSettingApplyForAll" Content="Apply for all actuators" Style="{DynamicResource CheckBoxStyleCustom}" HorizontalAlignment="Stretch" Margin="10,10,44,1.38" Foreground="White" FontSize="14" BorderBrush="White" Background="#33000000"  d:LayoutOverrides="Height" Click="CheckBoxActuatorSettingApplyForAll_Click"/>
                    </Grid>
                    <Grid Grid.Row="2" VerticalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="columnDefinitionActuatorSettingsLabelsColumn" Width="100"/>
                            <ColumnDefinition x:Name="columnDefinitionActuatorSettingsDeviceOneColumn" Width="*"/>
                            <ColumnDefinition x:Name="columnDefinitionActuatorSettingsDeviceTwoColumn" Width="*"/>
                            <ColumnDefinition x:Name="columnDefinitionActuatorSettingsDeviceThreeColumn" Width="*"/>
                            <ColumnDefinition x:Name="columnDefinitionActuatorSettingsUnitsColumn" Width="52"/>
                        </Grid.ColumnDefinitions>

                        <!--<Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition x:Name="gridActMotorSettingsRowDevice" Height="20"/>
                            <RowDefinition x:Name="gridActMotorSettingsRowSpeed" Height="35"/>
                            <RowDefinition x:Name="gridActMotorSettingsRowUSpeed" Height="35"/>
                            <RowDefinition x:Name="gridActMotorSettingsRowAcceleration" Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>-->

                        <Grid x:Name="gridActuatorSettingsLabelsColumn" Grid.Column="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Device:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="2">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Speed:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="3">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="μSpeed:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="4">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Acceleration:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="5">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Deceleration:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="6">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Min edge:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>

                            <Grid Grid.Row="7">
                                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="Max edge:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                            </Grid>
                        </Grid>

                        <Grid x:Name="gridActuatorSettingsDeviceOneColumn" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1" Height="Auto">
                                <TextBlock x:Name="textBlockctuatorSettingsDeviceOneLabel" HorizontalAlignment="Center" Text="COM1" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Foreground="White" Margin="4,0"/>
                            </Grid>

                            <Grid Grid.Row="2">
                                <TextBox x:Name="textBoxActuatorSettingsSpeedOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3,2,3"  Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10"  Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsSpeedValidityHandling"/>
                            </Grid>

                            <Grid  Grid.Row="3">
                                <TextBox x:Name="textBoxActuatorSettingsMicroSpeedOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3,2,3"  Padding="3" HorizontalContentAlignment="Center" MaxLength="3" FontSize="14" MinHeight="10"  Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMicroSpeedValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="4">
                                <TextBox x:Name="textBoxActuatorSettingsAccelerationOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsAccelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="5">
                                <TextBox x:Name="textBoxActuatorSettingsDecelerationOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsDecelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="6">
                                <TextBox x:Name="textBoxActuatorSettingsMinEdgeOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="5" VerticalContentAlignment="Center" FontSize="13" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMinEdgeValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="7">
                                <TextBox x:Name="textBoxActuatorSettingsMaxEdgeOne" Style="{StaticResource TextBoxRevealStyle}" Margin="2,3,2,3" Padding="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="13" MaxLength="5" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMaxEdgeValidityHandling"/>
                            </Grid>
                        </Grid>

                        <Grid x:Name="gridActuatorSettingsDeviceTwoColumn" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <TextBlock x:Name="textBlockctuatorSettingsDeviceTwoLabel" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14" Foreground="White"><Run Text="COM"/><Run Text="2"/></TextBlock>
                            </Grid>

                            <Grid Grid.Row="2">
                                <TextBox x:Name="textBoxActuatorSettingsSpeedTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsSpeedValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="3">
                                <TextBox x:Name="textBoxActuatorSettingsMicroSpeedTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="3" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMicroSpeedValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="4">
                                <TextBox x:Name="textBoxActuatorSettingsAccelerationTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsAccelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="5">
                                <TextBox x:Name="textBoxActuatorSettingsDecelerationTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsDecelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="6">
                                <TextBox x:Name="textBoxActuatorSettingsMinEdgeTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="5" VerticalContentAlignment="Center" FontSize="13" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMinEdgeValidityHandling"/>
                            </Grid>

                            <Grid Grid.Row="7">
                                <TextBox x:Name="textBoxActuatorSettingsMaxEdgeTwo" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="5" VerticalContentAlignment="Center" FontSize="13" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMaxEdgeValidityHandling"/>
                            </Grid>
                        </Grid>

                        <Grid x:Name="gridActuatorSettingsDeviceThreeColumn" Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <TextBlock x:Name="textBlockctuatorSettingsDeviceThreeLabel" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14" Foreground="White" Text="COM3"></TextBlock>
                            </Grid>

                            <Grid Grid.Column="3" Grid.Row="2">
                                <TextBox x:Name="textBoxActuatorSettingsSpeedThree" Style="{StaticResource TextBoxRevealStyle}"  Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsSpeedValidityHandling"/>
                            </Grid>

                            <Grid Grid.Column="3" Grid.Row="3">
                                <TextBox x:Name="textBoxActuatorSettingsMicroSpeedThree" Style="{StaticResource TextBoxRevealStyle}" Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="3" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMicroSpeedValidityHandling"/>
                            </Grid>

                            <Grid Grid.Column="3" Grid.Row="4">
                                <TextBox x:Name="textBoxActuatorSettingsAccelerationThree"  Style="{StaticResource TextBoxRevealStyle}" Text="" Margin="2,3,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsAccelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Column="3" Grid.Row="5">
                                <TextBox x:Name="textBoxActuatorSettingsDecelerationThree"  Style="{StaticResource TextBoxRevealStyle}" Text="" Margin="2,0,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="4" FontSize="14" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" Height="29" VerticalAlignment="Bottom" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsDecelerationValidityHandling"/>
                            </Grid>

                            <Grid Grid.Column="3" Grid.Row="6">
                                <TextBox x:Name="textBoxActuatorSettingsMinEdgeThree"  Style="{StaticResource TextBoxRevealStyle}" Text="" Margin="2,0,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="5" VerticalContentAlignment="Center" FontSize="13" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" Height="29" VerticalAlignment="Bottom" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMinEdgeValidityHandling"/>
                            </Grid>


                            <Grid Grid.Column="3" Grid.Row="7">
                                <TextBox x:Name="textBoxActuatorSettingsMaxEdgeThree"  Style="{StaticResource TextBoxRevealStyle}" Text="" Margin="2,0,2,3" Padding="3" HorizontalContentAlignment="Center" MaxLength="5" VerticalContentAlignment="Center" FontSize="13" MinHeight="10" Foreground="White" BorderBrush="#FF404040" Background="#33000000" Height="29" VerticalAlignment="Bottom" PreviewTextInput="TextBoxHandleUnsignedValue" PreviewKeyDown="TextBoxSpaceKeyHandler" DataObject.Pasting="TextBoxUnsignedPastingHandler" TextChanged="TextBoxActuatorSettingsMaxEdgeValidityHandling"/>
                            </Grid>
                        </Grid>

                        <Grid x:Name="gridActuatorSettingsUnitsColumn" Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="2">
                                <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="steps/s" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontStyle="Italic" FontWeight="Thin" FontSize="13"/>
                            </Grid>

                            <Grid Grid.Row="3">
                                <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="μsteps/s" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontStyle="Italic" FontWeight="Thin" FontSize="13"/>
                            </Grid>

                            <Grid Grid.Row="4">
                                <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="steps/s²" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontStyle="Italic" FontWeight="Thin" FontSize="13"/>
                            </Grid>

                            <Grid Grid.Row="5">
                                <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="steps/s²" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontStyle="Italic" FontWeight="Thin" FontSize="13"/>
                            </Grid>

                            <Grid Grid.Row="6" Grid.RowSpan="2">
                                <Button x:Name="buttonActuatorSettingsSetEdgeValues" IsEnabled="True" Style="{StaticResource ButtonRevealStyle}" Margin="5,0,5,0" Content="Set" Height="32" Foreground="White" Background="#7F3C3C3C" FontSize="14" Click="buttonActuatorSettingsSetEdgeValues_Click"/>
                            </Grid>

                            <Grid Grid.Row="7">
                                <!--<TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Text="steps" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontStyle="Italic" FontWeight="Thin" FontSize="13"/>-->
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="5,5,0,0" Background="#4C000000">
                <local:ControlTitleBar HorizontalAlignment="Stretch" VerticalAlignment="Top" TextBlockTitleBar="Connection Settings" Height="40"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" Margin="5" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="rowDefinitionConnectionSettingsCheckBox" Height="24"/>
                            <RowDefinition x:Name="rowDefinitionConnectionSettingsDeviceOne" Height="*"/>
                            <RowDefinition x:Name="rowDefinitionConnectionSettingsDeviceTwo" Height="*"/>
                            <RowDefinition x:Name="rowDefinitionConnectionSettingsDeviceThree" Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <CheckBox x:Name="checkBoxConnectionSettingsLockSetZero" Content="Lock set zero function" IsChecked="True" Style="{DynamicResource CheckBoxStyleCustom}" HorizontalAlignment="Stretch" Margin="5,5,0,0" Foreground="White" FontSize="14" BorderBrush="White" Background="{x:Null}" d:LayoutOverrides="Height" Click="checkBoxConnectionSettingsLockSetZero_Click"/>
                        </Grid>

                        <Grid x:Name="gridConnectionSettingsDeviceOneRow" Grid.Row="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="textBlockConnectionSettingsDeviceOne" HorizontalAlignment="Center" Text="COM1 to axis: " VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                                <ComboBox x:Name="comboBoxConnectionSettingsDeviceOne" Style="{DynamicResource ComboBoxStyleCustom}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" MinHeight="24" Width="50" MinWidth="20" FontSize="13" SelectionChanged="ComboBoxConnectionSettingsHandleSwap_SelectionChanged">
                                    <ComboBoxItem Content="X" Foreground="White" IsSelected="True"/>
                                    <ComboBoxItem Content="Y" Foreground="White"/>
                                    <ComboBoxItem Content="Z" Foreground="White"/>
                                </ComboBox>
                                <Button x:Name="buttonConnectionSettingsSetZeroDeviceOne" IsEnabled="False" Style="{StaticResource ButtonRevealStyle}" Margin="15,0,0,0" Content="Set zero" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="32" Width="60" Foreground="White" Background="#7A151515" FontSize="14" Click="buttonConnectionSettingsSetZeroDeviceOne_Click"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="gridConnectionSettingsDeviceTwoRow" Grid.Row="2">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="textBlockConnectionSettingsDeviceTwo" HorizontalAlignment="Center" Text="COM2 to axis: " VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                                <ComboBox x:Name="comboBoxConnectionSettingsDeviceTwo" Style="{DynamicResource ComboBoxStyleCustom}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" MinHeight="24" Width="50" MinWidth="20" FontSize="13" SelectionChanged="ComboBoxConnectionSettingsHandleSwap_SelectionChanged">
                                    <ComboBoxItem Content="X" Foreground="White"/>
                                    <ComboBoxItem Content="Y" Foreground="White" IsSelected="True"/>
                                    <ComboBoxItem Content="Z" Foreground="White"/>
                                </ComboBox>
                                <Button x:Name="buttonConnectionSettingsSetZeroDeviceTwo" IsEnabled="False" Style="{StaticResource ButtonRevealStyle}" Margin="15,0,0,0" Content="Set zero" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="32" Width="60" Foreground="White" Background="#7A151515" FontSize="14" Click="buttonConnectionSettingsSetZeroDeviceTwo_Click"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="gridConnectionSettingsDeviceThreeRow" Grid.Row="3">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="textBlockConnectionSettingsDeviceThree" HorizontalAlignment="Center" Text="COM3 to axis: " VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                                <ComboBox x:Name="comboBoxConnectionSettingsDeviceThree" Style="{DynamicResource ComboBoxStyleCustom}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" MinHeight="24" Width="50" MinWidth="20" FontSize="13" SelectionChanged="ComboBoxConnectionSettingsHandleSwap_SelectionChanged">
                                    <ComboBoxItem Content="X" Foreground="White"/>
                                    <ComboBoxItem Content="Y" Foreground="White"/>
                                    <ComboBoxItem Content="Z" Foreground="White"  IsSelected="True"/>
                                </ComboBox>
                                <Button x:Name="buttonConnectionSettingsSetZeroDeviceThree" IsEnabled="False" Style="{StaticResource ButtonRevealStyle}" Margin="15,0,0,0" Content="Set zero" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="32" Width="60" Foreground="White" Background="#7A151515" FontSize="14" Click="buttonConnectionSettingsSetZeroDeviceThree_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>

            <Grid x:Name="gridTrackingSettings" Grid.Row="3" Margin="5,0,0,5" Background="#4C000000" Visibility="Visible">
                <local:ControlTitleBar HorizontalAlignment="Stretch" VerticalAlignment="Top" TextBlockTitleBar="Tracking Settings" Height="40"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" Margin="10, 10, 5, 10" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="rowDefinitionTrackingSettingsDeviceOne1" Height="*"/>
                            <RowDefinition x:Name="rowDefinitionTrackingSettingsDeviceTwo1" Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Grid.Row="0">
                            <TextBlock x:Name="textBlockTrackingSettingsPixelTolerance" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Pixel Tolerance" FontSize="14"/>
                        </Grid>

                        <Grid Grid.Column="0" Grid.Row="1">
                            <TextBlock x:Name="textBlockTrackingSettingsTrackingSpeed" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="14"><Run Text="Tracking "/><Run Text="Delay"/></TextBlock>
                        </Grid>


                        <Grid Grid.Column="1" Grid.Row="0">
                            <Slider x:Name="sliderTrackingSettingsPixelTolerance" AutoToolTipPlacement="TopLeft" Orientation="Horizontal" Style="{StaticResource SliderStyleCustom}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Center" Maximum="15" Value="4" SmallChange="1" ValueChanged="SlideTrackingSettingsPixelTolerance_ValueChanged"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="1">
                            <Slider x:Name="sliderTrackingSettingsTrackingSpeed" AutoToolTipPlacement="TopLeft" Orientation="Horizontal" Style="{StaticResource SliderStyleCustom}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Center" Maximum="15" Value="4" SmallChange="1" ValueChanged="SlideTrackingSettingsTrackingSpeed_ValueChanged"/>
                        </Grid>


                        <Grid Grid.Column="2" Grid.Row="0">
                            <Button x:Name="buttonTrackingSettingsResetPixelTolerance" FontFamily="Segoe MDL2 Assets" Content="&#xE72C;" Style="{StaticResource ButtonRevealStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="20" Height="20" Foreground="White" Background="#7A151515" Click="ButtonTrackingSettingsResetPixelTolerance_Click"/>
                        </Grid>

                        <Grid Grid.Column="2" Grid.Row="1">
                            <Button x:Name="buttonTrackingSettingsResetTrackingSpeed" FontFamily="Segoe MDL2 Assets" Content="&#xE72C;" Style="{StaticResource ButtonRevealStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="20" Height="20" Foreground="White" Background="#7A151515" Click="ButtonTrackingSettingsResetTrackingSpeed_Click"/>
                        </Grid>

                    </Grid>
                </Grid>

            </Grid>

