             xmlns:FluentWPF="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF" xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="View.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>



        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/FluentWPF;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="XAMLStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="NewAccentPointerOver"
                         Color="#BB7520B1"/>

            <SolidColorBrush x:Key="NewAccentActiveState"
                         Color="#FF7520B1"/>

            <!-- -->

            <SolidColorBrush x:Key="ColorBordeauxAccent"
                         Color="#FF640331"/>

            <SolidColorBrush x:Key="ColorBordeauxAccentLight"
                         Color="#FF961050"/>

            <SolidColorBrush x:Key="DefaultControlBorderColor"
                             Color="#FF404040"/>



            <SolidColorBrush x:Key="TextBoxWarningBorderColor"
                             Color="#FFEEB800"/>

            <SolidColorBrush x:Key="TextBoxErrorBorderColor"
                             Color="#FFE8003F"/>

      
            <SolidColorBrush x:Key="TextBoxWarningHoverBorderColor"
                             Color="#E0EEB800"/>

            <SolidColorBrush x:Key="TextBoxErrorHoverBorderColor"
                             Color="#E0E8003F"/>
            

            <SolidColorBrush x:Key="TextBoxWarningFocusedBorderColor"
                             Color="#C0EEB800"/>

            <SolidColorBrush x:Key="TextBoxErrorFocusedBorderColor"
